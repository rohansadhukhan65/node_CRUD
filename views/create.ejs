<div class="container mt-5 ">
  <div class="card shadow"  >
      <form action="/create" method="POST"  class="p-5 mx-5">
    <h1 class="text-center colorP"> <img src="/icon/create.svg" height="50px" width="50px" alt=""> Create</h1>

          <div class="form-group">
            <label for="exampleInputEmail1" class="colorP  ">Name</label>
            <input name="name" type="text" class="form-control myinput  "   id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Name">
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1" class="colorP ">Email</label>
            <input name="email" type="email" class="form-control myinput  " id="exampleInputPassword1" placeholder="Enter Email">
          </div>
        


         <div class="text-center my-3">
              <button type="submit" class="btn mybtn w-25 py-1">Submit</button>    
              <a href="/" class="btn btn-outline-danger  ml-2 py-1 w-25">Cancel</a>   
          </div> 


      </form>
  </div>
